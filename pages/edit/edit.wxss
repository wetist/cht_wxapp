/* pages/edit/edit.wxss */

.user {
  width: 725rpx;
  background: #fff;
  padding: 30rpx 25rpx 30rpx 0;
  margin: 15rpx 0 0 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eee;
}

.userinfo-avatar {
  flex: 1;
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.user .user-info {
  flex: 5;
  text-align: left;
}

.user .user-info text {
  display: block;
}

.user .user-info .userinfo-nickname {
  padding: 6rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #818a8f;
}

.user .user-info .edit {
  font-size: 30rpx;
  color: #bababa;
  line-height: 34rpx;
}

.my {
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}

.my .my-item {
  width: 750rpx;
  background: #fff;
  padding: 0;
  border-bottom: solid 1px #ebebeb;
}

.my .my-item .myitem-icon {
  flex: 1;
}

.my .my-item .myitem-icon image {
  width: 45rpx;
  height: 45rpx;
  padding: 37.5rpx 0;
}

.my .my-item .myitem-name {
  flex: 5;
  text-align: left;
  font-size: 30rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 25rpx;
}

.my .my-item:last-child .myitem-name {
  border-bottom: none;
}

.avatar {
  margin: 25rpx 0 0 0;
}
